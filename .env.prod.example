# Production Environment Variables Example
# Copy this file to .env.prod and fill in actual values

# Application Settings
APP_ENV=production
DEBUG=false
LOG_LEVEL=info

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rag7_prod
POSTGRES_USER=rag7user
POSTGRES_PASSWORD=CHANGEME_SECURE_PASSWORD

# Redis Cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGEME_REDIS_PASSWORD
REDIS_DB=0

# LangGraph Configuration
LANGGRAPH_API_URL=http://langgraph:8000
LANGGRAPH_API_KEY=CHANGEME_LANGGRAPH_API_KEY

# OpenAI / LLM Provider
OPENAI_API_KEY=CHANGEME_OPENAI_API_KEY
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# n8n Configuration
N8N_HOST=n8n
N8N_PORT=5678
N8N_WEBHOOK_URL=https://n8n.example.com  # Replace with your actual domain
N8N_ENCRYPTION_KEY=CHANGEME_N8N_ENCRYPTION_KEY

# Security
SECRET_KEY=CHANGEME_SECRET_KEY_FOR_JWT
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Settings
ALLOWED_ORIGINS=https://example.com,https://www.example.com  # Replace with your actual domains

# Monitoring & Observability
SENTRY_DSN=  # Optional: Add Sentry DSN for error tracking
OTEL_EXPORTER_OTLP_ENDPOINT=  # Optional: OpenTelemetry collector endpoint

# Container Registry
GHCR_TOKEN=CHANGEME_GITHUB_TOKEN  # GitHub personal access token with packages:read scope
